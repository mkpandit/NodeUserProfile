<%- include ../layouts/header.ejs %>

<div class="row">
    <div class="col-2"></div>
    <div class="col-8 text-center">
        <div class="profile-pic">
            <img src="http://localhost:3000/profilePics/<%=  profilepic %>" />
        </div>
        <div class="profile-details">
            <h5><%= lastname %>, <%= firstname %></h5>
            <p><%= dateofbirth %>, <i class="fas fa-tint"></i> <%= bloodgroup %></p>
            <p><i class="fas fa-at"></i> <a href="mailto:<%= email %>"><%= email %></a></p>
            <p><i class="fas fa-phone-square"></i> <a href="tel:<%= phone %>"><%= phone %></a></p>
            <p><i class="fas fa-briefcase"></i> <%= occupation %></p>
        </div>
    </div>
    <div class="col-2"></div>
</div>

<%- include ../layouts/footer.ejs %>